{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonJs",
    "lib": ["esnext"],
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "sourceMap": false,
    "declaration": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  // "include": ["./**/*", "./types/declaration.d.ts"],
  // "exclude": ["node_modules", "./build/config/**/*"]
  "exclude": ["node_modules"]
}
